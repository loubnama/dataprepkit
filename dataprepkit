df=pd.read_csv('/Users/lubna/Downloads/Salaries 22.11.03.csv')
df.head()
#ملخص عن الرواتب الكليه
print("SMA for TotalPay", df['TotalPay'].mean())
print("The smallest salary within TotalPay",df['TotalPay'].min())
print("The highest salary within TotalPay",df['TotalPay'].max())
print("How many duplicate items are in this column?",df['TotalPay'].isna().sum())
#معلومات عن الاجر الاساسي
print("SMA for BasePay", df['BasePay'].mean())
print("The smallest salary within BasePay",df['BasePay'].min())
print("The highest salary within BasePay",df['BasePay'].max())
print("How many duplicate items are in this column?",df['BasePay'].isna().sum())
#ملخص لمعلومات لعمل الاضافي
print("SMA for OvertimePay", df['OvertimePay'].mean())
print("The smallest salary within OvertimePay",df['OvertimePay'].min())
print("The highest salary within OvertimePay",df['OvertimePay'].max())
print("How many duplicate items are in this column?",df['OvertimePay'].isna().sum())
#ملخص عن معلومات الدفع الاخ
print("SMA for OtherPay", df['OtherPay'].mean())
print("The smallest salary within OtherPay",df['OtherPay'].min())
print("The highest salary within OtherPay",df['OtherPay'].max())
print("How many duplicate items are in this column?",df['OtherPay'].isna().sum())
#ملخص عن معلومات فوائد الاجر الكامل
